{
  "name": "@dashview/frontend",
  "version": "0.2.1",
  "description": "Dashview V2 frontend dashboard framework",
  "main": "dist/dashview-v2.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "webpack serve --mode development",
    "build": "npm run clean && npm run build:prod",
    "build:dev": "webpack --mode development",
    "build:prod": "webpack --mode production",
    "build:analyze": "ANALYZE=true webpack --mode production",
    "clean": "rimraf dist ../panel",
    "lint": "eslint src --ext .ts,.js --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "format": "prettier --write \"src/**/*.{ts,js,css,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,css,json}\"",
    "precommit": "npm run lint && npm run type-check && npm run test"
  },
  "dependencies": {
    "@lit/reactive-element": "^2.0.0",
    "@lit/task": "^1.0.0",
    "lit": "^3.0.0",
    "tslib": "^2.6.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "autoprefixer": "^10.4.0",
    "clean-webpack-plugin": "^4.0.0",
    "compression-webpack-plugin": "^10.0.0",
    "css-loader": "^6.8.0",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "cssnano": "^6.0.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-lit": "^1.10.0",
    "eslint-plugin-wc": "^2.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mini-css-extract-plugin": "^2.7.0",
    "postcss": "^8.4.0",
    "postcss-loader": "^7.3.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "style-loader": "^3.3.0",
    "terser-webpack-plugin": "^5.3.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.5.0",
    "typescript": "^5.2.0",
    "webpack": "^5.89.0",
    "webpack-bundle-analyzer": "^4.10.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^4.15.0"
  },
  "keywords": [
    "home-assistant",
    "dashboard",
    "lit-element",
    "typescript"
  ],
  "author": "markusholzhaeuser",
  "license": "MIT"
}
